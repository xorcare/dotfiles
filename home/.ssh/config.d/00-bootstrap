# Allows you to ignore an error if the UseKeychain option is not supported by
# the current SSH software.
IgnoreUnknown UseKeychain

Compression yes
ConnectTimeout 1
ConnectionAttempts 3
ExitOnForwardFailure yes
HashKnownHosts yes
TCPKeepAlive yes
VerifyHostKeyDNS yes

Host *
  SendEnv LANG LC_*
  UseKeychain yes
  AddKeysToAgent yes

Host github.com
  HostName github.com
  Port 22
  User git

Host gitlab.com
  HostName gitlab.com
  Port 22
  User git
